enrich heap-sep with

functions
. => . :  ref Ô obj ­ heap ­ bool prio 11;
. =>_  :  ref ­ heap ­ bool;
. =>?  :  ref ­ heap ­ bool;
_´ .   : (ref ­ (heap ­ bool)) ­ (heap ­ bool);
_´ .   : (ref Ô ref ­ (heap ­ bool)) ­ (heap ­ bool);
_´ .   : (obj ­ (heap ­ bool)) ­ (heap ­ bool);

variables
rP         : ref ­ (heap ­ bool);
rrP        : ref Ô ref ­ (heap ­ bool);
